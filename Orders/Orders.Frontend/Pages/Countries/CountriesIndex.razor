@page "/countries"

<h3>Paises</h3>

<!--Creo un nuevo boton-->
<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo País</a>
</div>

<!--LLamo a mi componente generico le mando el body y le paso la lista-->
<GenericList MyList="Countries">
    <Body>
        <!--Clase de bootstrap-->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>País</th>
                    <th>Departamentos / Estados</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!--codigo C# se ejecuta primero el Countries es null-->
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StatesNumber</td>
                        <td>
                            <!--Boton de Editar es un link-->
                            <a href="/countries/edit/@country.Id" class="btn btn-warning  btn-sm">Editar</a>
                            <a class="btn btn-info btn-sm" href="/countries/details/@country.Id">Detalles</a>
                            <!--Boton de Editar es un Button-->
                            <button class="btn btn-danger btn-sm" @onclick=@(() => DeleteAsync(country))>Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>


